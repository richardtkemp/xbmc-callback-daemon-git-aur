post_install() {
	echo "
See /usr/share/xbmc-callback-daemon-git/config.example.json for a sample config file. Run with

	# xbmc-callback-daemon <your config file>.json

Ensure in xbmc's 'Settings/Services/Remote control' that you have both options selected. Further information and examples are available at https://github.com/pdf/xbmc-callback-daemon
"
}

post_upgrade() {
  post_install
}
